{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "allow",
    "webfetch": "allow",
    "read": "allow",
    "grep": "allow",
    "glob": "allow",
    "list": "allow",
    "todowrite": "allow",
    "todoread": "allow",
    "question": "allow",
    "lsp": "deny",
    "patch": "deny",
    "bash": {
        "*": "ask",
        
        "git *": "ask",

        "git init*": "deny",
        "git checkout *": "deny",
        "git commit *": "deny",
        "git add *": "deny",
        "git mv *": "deny",
        "git rm *": "deny",
        "git reset *": "deny",
        "git switch *": "deny",
        "git restore *": "deny",
        "git clean *": "deny",
        "git stash *": "deny",
        "git rebase *": "deny",
        "git merge *": "deny",
        "git push *": "deny",
        "git pull *": "deny",
        "git config *": "deny",

        "git clone *": "allow",
        "git status*": "allow",
        "git branch *": "allow",
        "git diff *": "allow",
        "git show *": "allow",
        "git reflog *": "allow",
        "git log *": "allow",
        "git blame *": "allow",
        "git cherry-pick *": "allow",
        "git fetch *": "allow",

        "docker *": "ask",
                
        "docker image*": "deny",
        "docker rm*": "deny",
        "docker push *": "deny",
        
        "docker ps*": "allow",
        "docker cp *": "allow",
        "docker exec *": "allow",
        "docker commit *": "allow",
        "docker images *": "allow",
        "docker image inspect *": "allow",
        "docker image ls*": "allow",
        "docker build *": "allow",
        "docker logs *": "allow",
        "docker stats*": "allow",
        "docker top*": "allow",
        "docker version*": "allow",
        "docker inspect*": "allow",
        "docker diff*": "allow",
        "docker port*": "allow",
        
        "find *": "allow",
        "env*": "allow",
    }
  }
}